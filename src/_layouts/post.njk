---
layout: base
---

<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <header class="mb-3">
                    <time class="post-meta postlist-date fs-5 fst-italic" datetime="{{ date | dateToRfc3339 }}">{{ date | formatDate }}</time>
                </header>
                {{ content | safe }}
            </div>
        </div>
    </div>
</article>
